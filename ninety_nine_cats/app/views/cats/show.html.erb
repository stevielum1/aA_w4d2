

<h1> <%= @cat.name %> </h1>
<table>
    <tr>
      <th>Attribute</th>
      <th>Value</th>
    </tr>
    
    <tr>
      <td>Age</td>
      <td> <%= @cat.age %> </td>
    </tr>
    
    <tr>
      <td>Birth_Date</td>
      <td> <%= @cat.birth_date %> </td>
    </tr>
    
    <tr>
      <td>Color</td>
      <td> <%= @cat.color %> </td>
    </tr>
    
    <tr>
      <td>Sex</td>
      <td> <%= @cat.sex %> </td>
    </tr>
</table>

<h1>Rental Requests</h1>
<% if @requests.empty? %>
  <p><%= @cat.name %> has no rental requests</p>
  
<% else %>
  <table>
    <tr>
      <!-- <th>User</th> -->
      <th>Start_Date</th>
      <th>End_Date</th>
      <th>Status</th>
    </tr>
    <% @requests.each do |request| %>
      <tr>
        <td> <%= request.start_date %> </td>
        <td> <%= request.end_date %> </td>
        <td> <%= request.status %> </td>
      </tr>
    <% end %>
    
  </table>
  
<% end %>